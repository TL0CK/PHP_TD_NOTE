{% extends 'AppBundle::layout.html.twig' %}

{% block menu_calendar %}active{% endblock %}

{% block contents %}
    <section>
    	<div class="container">

			<h3>Liste des sorties</h3>

            <ul>
                {% for episode in episodes %}
                    <li>
                        {{ episode.season.show.name }} </br> Saison : {{ episode.season.number }} Episode : {{ episode.number }} : {{ episode.name }} - {{ episode.date|date('d/m/Y') }}
                    </li>
                {% endfor %}
            </ul>

    	</div>
    </section>
{% endblock %}
